<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.scorekeeper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:baselineAligned="false">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/team1"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sectionSz"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/initScore"
            android:gravity="center_horizontal"
            android:textSize="@dimen/scoreSz"
            android:id="@+id/home_score"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add5"
            android:layout_margin="@dimen/btnMargin"
            android:onClick="addFiveHomeTeam"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add1"
            android:layout_margin="@dimen/btnMargin"
            android:onClick="addOneHomeTeam"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leadJammer"
            android:layout_margin="@dimen/btnMargin"
            android:onClick="leadHome"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/team2"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sectionSz"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/initScore"
            android:gravity="center_horizontal"
            android:textSize="@dimen/scoreSz"
            android:id="@+id/away_score"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add5"
            android:layout_margin="@dimen/btnMargin"
            android:onClick="addFiveAwayTeam"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add1"
            android:layout_margin="@dimen/btnMargin"
            android:onClick="addOneAwayTeam"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leadJammer"
            android:layout_margin="@dimen/btnMargin"
            android:onClick="leadAway"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/initJammer"
            android:textSize="@dimen/sectionSz"
            android:paddingBottom="25dp"
            android:id="@+id/lead_jammer"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:onClick="resetBtn"/>
    </LinearLayout>

</LinearLayout>
